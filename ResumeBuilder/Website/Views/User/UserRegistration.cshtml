@model IEnumerable<RB.Website.Model.ResumeDataModel>

@{
    ViewBag.Title = "UserRegistration";
}

<style type="text/css">
    .column {
        float: left;
        width: 50%;
        padding: 10px;
        height: 50px !important;
        background-color: black;
        text-align: center;
        color: white;
    }

    .rowTab:after {
        content: "";
        display: table;
        clear: both;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    #loader {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        background: rgba(0,0,0,0.75) url(../../dist/img/loader.gif) no-repeat center center;
        z-index: 10000;
    }
</style>
<div id="loader">
</div>
<div class="row" style="margin-top:10px;">
    <div class="col-md-6" style="margin:auto !important;">
        <div class="rowTab">
            <div class="column" style="background-color:#f5af05 !important" id="tabPersonalDetails" onclick="TabClick('tabPersonalDetails')">
                <label>Personal Details</label>
            </div>
            <div class="column" id="tabExperience" onclick="TabClick('tabExperience')">
                <label>Experience</label>
            </div>
            <div class="column" id="tabEducation" onclick="TabClick('tabEducation')">
                <label>Education</label>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <input type="hidden" value="@ViewBag.Tab" id="hdnTab" />
    <div class="col-md-8" style="margin:auto;margin-top:5px !important" id="dvPersonalDetails">
        <div class="card card-default">
            <div class="card-body">
                <form id="frmPersonalDetails">
                    <input type="hidden" id="hdnInstallerDetailsID" />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" class="form-control" id="txtFirstName" data-required="Name is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" id="txtLastName" data-required="Name is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" id="txtEmail" data-required="Email is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" class="form-control" id="txtPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Address</label>
                                <textarea type="text" class="form-control" id="txtAddress" rows="5" data-required="Address is required"></textarea>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-2">
                            <div class="form-group">
                                <button type="button" style="background:#f5af05;" class="btn btn-default" onclick="InsertPersonalDetails();">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8" style="display:none;margin:auto;margin-top:5px !important;" id="dvExperience">
        <div class="card card-default">
            <div class="card-body">
                <form id="frmWarrantyCheck">
                    <input type="hidden" id="hdnProductID" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Job Title</label>
                                <input type="text" class="form-control" value="@ViewBag.VIN" id="txtWarrantyVIN" data-required="Vin is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Employer</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>City</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Country</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Start date</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>End date</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <input data-val="true"
                                   data-val-required="The isActive field is required."
                                   id="isActive"
                                   name="isActive"
                                   type="checkbox"
                                   value="true" />
                            I Currently work here
                            <input name="isActive" type="hidden" value="false" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-2">
                            <div class="form-group">
                                <button type="button" style="background:#f5af05;" class="btn btn-default" onclick="CheckWarrantyDetails();">Save</button>
                            </div>
                            <div class="text-danger" style="text-align:center !important">
                                <label id="invalidMsg"></label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8" style="display:none;margin:auto;margin-top:5px !important;" id="dvEducation">
        <div class="card card-default">
            <div class="card-body">
                <form id="frmWarrantyCheck">
                    <input type="hidden" id="hdnProductID" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Education</label>
                                <input type="text" class="form-control" value="@ViewBag.VIN" id="txtWarrantyVIN" data-required="Vin is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Employer</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>City</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Country</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Start date</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>End date</label>
                                <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" id="txtWarrantyPhoneNumber" data-required="Phone Number is required" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <input data-val="true"
                                   data-val-required="The isActive field is required."
                                   id="isActive"
                                   name="isActive"
                                   type="checkbox"
                                   value="true" />
                            I Currently work here
                            <input name="isActive" type="hidden" value="false" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-2">
                            <div class="form-group">
                                <button type="button" style="background:#f5af05;" class="btn btn-default" onclick="CheckWarrantyDetails();">Save</button>
                            </div>
                            <div class="text-danger" style="text-align:center !important">
                                <label id="invalidMsg"></label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script type="text/javascript" src="@Url.Content("~/Scripts/UserRegistration/UserRegistration.js")"></script>
