@model RB.Website.Model.ResumeDataModel
@{
    ViewBag.Title = "PersonalPartialView";
}

    <div class="card card-default" id="dvPersonalDetails">
        <div class="card-body">
            <form id="frmPersonalDetails">
                @Html.TextBoxFor(Mode => Model.UserDetailsModel.PersonalDetailD, new { @class = "", @style = "display:none" })
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>First Name</label>
                            @Html.TextBoxFor(model => model.UserDetailsModel.FirstName, new { @class = "form-control", @id = "txtFirstName" })
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Last Name</label>
                            @Html.TextBoxFor(model => model.UserDetailsModel.LastName, new { @class = "form-control", @id = "txtLastName", required = "required" })
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(model => model.UserDetailsModel.Email, new { @class = "form-control", @id = "txtEmail" })
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Phone Number</label>
                            @Html.TextBoxFor(model => model.UserDetailsModel.PhoneNumber, new { @class = "form-control", @id = "txtPhoneNumber" })
                            @*<input type="text" class="form-control" id="txtPhoneNumber" data-required="Phone Number is required" />*@
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextAreaFor(model => model.UserDetailsModel.Address, new { @class = "form-control", @id = "txtAddress" })
                            @*<textarea type="text" class="form-control" id="txtAddress" rows="5" data-required="Address is required"></textarea>*@
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Add Your Summary</label>
                            @Html.TextAreaFor(model => model.UserDetailsModel.Summary, new { @class = "form-control", @id = "txtSummary" })
                            @*<textarea type="text" class="form-control" id="txtAddress" rows="5" data-required="Address is required"></textarea>*@
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Job Title</label>
                            @Html.TextBoxFor(model => model.UserDetailsModel.JobTitle, new { @class = "form-control", @id = "txtJobTitle" })
                            @*<textarea type="text" class="form-control" id="txtAddress" rows="5" data-required="Address is required"></textarea>*@
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-2">
                        <div class="form-group">
                            <button type="button" style="background:#f5af05;" class="btn btn-default" onclick="InsertPersonalDetails();">Save</button>
                        </div>
                    </div>
                </div>
                @*}*@

            </form>
        </div>
    </div>
